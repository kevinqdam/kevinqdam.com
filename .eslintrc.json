{
  "extends": ["plugin:astro/recommended"],
  "overrides": [
    {
      "files": ["*.astro"],
      "parser": "astro-eslint-parser",
      "parserOptions": {
        "parser": "@typescript-eslint/parser",
        "extraFileExtensions": [".astro"]
      },
      "rules": {}
    },
    {
      "files": ["*.mjs", "*.cjs"],
      "parser": "babel-eslint",
      "parserOptions": {
        "ecmaVersion": "latest",
        "ecmaFeatures": {
          "modules": true
        }
      }
    }
  ]
}
