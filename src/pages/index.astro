---
import Layout from '../layouts/Layout.astro';
import { Image } from '@astrojs/image/components';
---

<Layout title="Kevin Dam">
  <div class='flex flex-row space-x-6 pb-8'>
    <Image
      alt='Kevin Dam profile picture'
      height={125}
      width={125}
      src='/images/bagel.jpg'
      class='rounded-full filter bg-gradient-to-r from-slate-500 to-teal-500 dark:from-slate-500 dark:to-rose-500 p-1'
    />
    <div class='flex flex-col justify-center space-y-1'>
      <h1 class='text-4xl font-bold'>Kevin Dam</h1>
      <div>Software Engineer</div>
    </div>
  </div>
  <div class='flex flex-col space-y-6'>
    <p class='text-2xl'>
      A passionate software engineer who loves to solve problems by writing
      code.
    </p>
    <p>Currently, I am building the web at Amazon Web Services ☁️</p>
  </div>
</Layout>
